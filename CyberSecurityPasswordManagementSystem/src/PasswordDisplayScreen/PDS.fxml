<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.ListView?>

<?import javafx.scene.layout.VBox?>
<GridPane fx:controller="PasswordDisplayScreen.PDSController" fx:id="root"
          xmlns:fx="http://javafx.com/fxml" hgap="10" vgap="10" alignment="center">

    <ScrollPane GridPane.rowIndex="1" GridPane.columnIndex="0"
    GridPane.columnSpan="5" GridPane.rowSpan="5">
        <content>
            <VBox alignment="CENTER" prefWidth="200" fx:id="passwordBox">
                <ListView prefWidth="200" fx:id="passwordList"/>
            </VBox>
        </content>
    </ScrollPane>

    <Button text="  Add Password " GridPane.rowIndex="1" GridPane.columnIndex="5"
    onAction="#handleAddPasswordButton">
    </Button>
    <Button text="  Edit Password " GridPane.rowIndex="2" GridPane.columnIndex="5"
    onAction="#handleEditPasswordButton">
    </Button>
    <Button text="Delete Password" GridPane.rowIndex="3" GridPane.columnIndex="5"
            onAction="#handleDeletePasswordButton">
    </Button>
    <Button text="Edit Master Password" GridPane.rowIndex="4" GridPane.columnIndex="5"
            onAction="#handleEditMasterPasswordButton">
    </Button>
    <Button text="Show Database" GridPane.rowIndex="5" GridPane.columnIndex="5"
            onAction="#handleShowDatabaseButton">
    </Button>
    <Button text="Logout" GridPane.rowIndex="6" GridPane.columnIndex="5"
            onAction="#handleLogoutButton">
    </Button>


</GridPane>